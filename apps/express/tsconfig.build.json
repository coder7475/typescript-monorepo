{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"noEmit": false,
		"baseUrl": "./src",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"importsNotUsedAsValues": "remove",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
